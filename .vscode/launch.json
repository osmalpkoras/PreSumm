    "version": "0.2.0",
    "configurations": [
        {
            "name": "test",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "args": [
                "-task",
                "abs",
                "-mode",
                "validate",
                "-batch_size",
                "3000",
                "-test_batch_size",
                "500",
                "-bert_data_path",
                "../bert_data/cnndm",
                "-log_file",
                "../logs/val_abs_bert_cnndm",
                "-model_path",
                "../checkpoints/BertAbs/cnndm",
                "-sep_optim",
                "true",
                "-use_interval",
                "true",
                "-visible_gpus",
                "1qqqq",
                "-max_pos",
                "512",
                "-max_length",
                "200",
                "-alpha",
                "0.95",
                "-min_length",
                "50",
                "-result_path",
                "../logs/abs_bert_cnndm"
            ],
            "justMyCode": false,
        },
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "train.py",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "-task",
                "abs",
                "-mode",
                "train",
                "-bert_data_path",
                "../bert_data/cnndm",
                "-dec_dropout",
                "0.2",
                "-model_path",
                "../checkpoints/BertAbs/cnndm",
                "-sep_optim",
                "true",
                "-lr_bert",
                "0.002",
                "-lr_dec",
                "0.2",
                "-save_checkpoint_steps",
                "2000",
                "-batch_size",
                "140",
                "-train_steps",
                "200000",
                "-report_every",
                "50",
                "-accum_count",
                "5",
                "-use_bert_emb",
                "true",
                "-use_interval",
                "true",
                "-warmup_steps_bert",
                "20000",
                "-warmup_steps_dec",
                "10000",
                "-max_pos",
                "512",
                "-visible_gpus",
                "2",
                "-log_file",
                "../logs/abs_bert_cnndm"
            ]
        }
    ]
}